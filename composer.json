{
    "name": "pestphp/drift",
    "description": "The Drift Project",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "drift"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1.0"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Drift\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "nikic/php-parser": "^4.15.4",
        "nunomaduro/termwind": "^1.15.1",
        "pestphp/pest": "^2.5",
        "pestphp/pest-dev-tools": "^2.6.0",
        "symfony/console": "^6.2.8",
        "symfony/finder": "^6.2.7",
        "spatie/pest-plugin-snapshots": "^2.0.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "bin": [
        "bin/drift"
    ],
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
